{
  "name": "@lancernix/siyuan-mcp",
  "version": "1.0.2",
  "bin": {
    "siyuan-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "bun x tsc -p tsconfig.build.json && chmod +x dist/server.js",
    "start": "bun dist/server.js",
    "dev": "bun src/server.ts",
    "inspect": "mcp-inspector bun src/server.ts",
    "lint": "biome check . && bun x tsc --noEmit",
    "format": "biome check --write ."
  },
  "keywords": [
    "mcp",
    "siyuan",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lancernix/siyuan-mcp.git"
  },
  "author": "",
  "homepage": "",
  "type": "module",
  "license": "MIT",
  "description": "MCP server for SiYuan Note",
  "files": [
    "dist",
    "README.md",
    "README.zh.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.6"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@modelcontextprotocol/inspector": "^0.19.0",
    "@semantic-release/npm": "^13.1.4",
    "@types/node": "^25.1.0",
    "bun-types": "^1.3.8",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
